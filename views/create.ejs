<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Task</title>
    <link rel="stylesheet" href="/css/create.css">
    <!-- Link to stylesheet -->
</head>
<body>
    <div class="form-container">
        <!-- Container for the task creation form -->
        <h1>Create New Task</h1>
        <form action="/create" method="post" class="create-task-form">
            <!-- Form for creating a new task -->
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
            <!-- Input field for the task title -->

            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" required></textarea>
            <!-- Textarea for the task description -->

            <label for="lastUpdated">Last Updated</label>
            <input type="datetime-local" id="lastUpdated" name="lastUpdated" required>
            <!-- Input field for the last updated timestamp -->

            <button type="submit">Create Task</button>
            <!-- Button to submit the new task -->
        </form>
        <a href="/show" class="back-button">Back</a>
        <!-- Link to go back to the task list -->
    </div>
    <script>
        // Function to format the date for the datetime-local input
        function formatDateToInputValue(date) {
            // ... (date formatting logic)
        }

        // Set the default value of the datetime-local input to the current date and time
        document.addEventListener('DOMContentLoaded', () => {
            const now = new Date();
            document.getElementById('lastUpdated').value = formatDateToInputValue(now);
        });
    </script>
</body>
</html>