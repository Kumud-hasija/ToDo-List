<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/index.css">
  <!-- Link to stylesheet -->
  <title>ToDo Task</title>
</head>
<body>
  <div class="heading">
    <!-- Page heading -->
    <h1> ToDo Tasks </h1>
  </div>

  
  <div class="container">
    <!-- Container for the calendar-like element -->
    <div class="swiper">
      <!-- Swiper component for the calendar -->
      <div class="card"><h3>1</h3></div>
      <!-- Calendar day (1) -->
      <div class="card"><h3>2</h3></div>
      <!-- Calendar day (2) -->
      <div class="card"><h3>3</h3></div>
      <!-- Calendar day (3) -->
      <!-- ... (rest of the calendar days) -->
    </div>
  </div>
  
  <div class="search-bar">
    <!-- Search bar container -->
    <form action="/home" method="get">
      <!-- Search form -->
      <input
        type="text"
        name="search"
        value="<%= searchQuery %>"
        <!-- Search input field -->
        placeholder="Search tasks"
      />
      <button class="button" type="submit">Search</button>
      <!-- Search button -->
    </form>
  </div>
  
  <div class="tasks">
    <!-- Task list container -->
    <form action="/show" method="get"  style="margin: 10px;">
      <!-- Button to view more tasks -->
      <button class="button" type="submit">Click for more</button>
    </form>
    <div class="task-container">
      <!-- Container for individual tasks -->
      <% tasks.forEach(task => { %>
        <!-- Loop through each task -->
        <div class="task">
          <!-- Individual task element -->
          <form action="/update/<%= task.id %>" method="post" style="display: flex; align-items: center;">
            <!-- Form for updating task status -->
            <input
              type="checkbox"
              <%= task.done ? 'checked' : '' %>
              onchange="this.form.submit()"
            />
            <div style="margin-left: 10px;">
              <!-- Task title and details -->
              <div style="font-size: larger; <%= task.done ? 'text-decoration: line-through;' : '' %>">
                <b><%= task.title %></b>
              </div>
              <!-- Task title (with strikethrough if done) -->
              <small style="color: darkgrey;">Last updated: <%= new Date(task.lastUpdated).toLocaleString() %></small>
              <!-- Last update timestamp -->
            </div>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>